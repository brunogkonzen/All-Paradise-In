{
  "name": "all-paradise-in",
  "version": "1.0.0",
  "description": "Simple Blackjack game using Electron",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Arthur K e Bruno",
  "license": "MIT",
  "dependencies": {
    "antd": "^4.24.16",
    "express": "^4.19.2",
    "node-addon-api": "^8.0.0",
    "sqlite3": "^5.0.11"
  },
  "devDependencies": {
    "electron": "^16.2.8",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.example.allparadisein",
    "productName": "All Paradise In",
    "files": [
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
