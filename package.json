{
    "name": "all-paradise-in",
    "version": "1.0.0",
    "description": "All Paradise In - Blackjack Game",
    "main": "src/js/main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder",
      "build:win": "electron-builder build --win",
      "build:linux": "electron-builder build --linux"
    },
    "dependencies": {
      "electron": "^26.0.0",
      "better-sqlite3": "^7.5.0"
    },
    "devDependencies": {
      "electron-builder": "^22.14.13"
    },
    "build": {
      "appId": "com.allparadisein.app",
      "productName": "All Paradise In",
      "directories": {
        "buildResources": "assets",
        "output": "dist"
      },
      "files": [
        "src/**/*",
        "assets/**/*"
      ],
      "win": {
        "icon": "assets/icon/icon.png",
        "target": [
          "nsis",
          "zip"
        ]
      },
      "linux": {
        "icon": "assets/icon/icon.png",
        "target": [
          "AppImage",
          "deb",
          "tar.gz"
        ]
      },
      "mac": {
        "icon": "assets/icon/icon.png",
        "target": [
          "dmg",
          "zip"
        ]
      }
    },
    "author": "Arthur e Bruno",
    "license": "ISC",
    "directories": {
      "doc": "docs"
    }
  }
  